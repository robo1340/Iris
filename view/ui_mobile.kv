    background_color : [1,1,1,1]
    canvas:
        Color:
            rgba: [0, 0, 0, 1]
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    canvas.before:
        Color:
            rgba: contact_widget.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    
    BoxLayout:
        id : message_header
        orientation : 'horizontal'
        size_hint : (1,None)
        height : lbl.height
        MediumLabel:
            id : lbl
            text : contact_widget.callsign_text
        MediumLabel:
            text : contact_widget.time_text
        
